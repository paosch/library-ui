<div class="panel-heading">
  <div class="search">
    <input type="text" placeholder="Search by author name">
  </div>

  {{#link-to "author.create" class="btn-new"}}
    <div class="sr-only">Add a new author</div>
  {{/link-to}}
</div>

<div class="panel-content">
  <h3 class="panel-title">Authors</h3>

  <ul class="collection">
    {{#each model as |author|}}
      {{author-list-item 
        authorId=author.id
        first=author.first 
        last=author.last 
        tagName="li"
      }}
    {{/each}}
  </ul>
</div>

{{outlet}}