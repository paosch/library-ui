<div class="slide-out-bg"></div>

<div class="slide-out">
  {{#link-to "author" class="btn-back"}}
    <span class="sr-only">Back</span>
  {{/link-to}}

  <div class="slide-out-heading">
    <div class="title">
      <h3>New Author</h3>
    </div>

    <div class="slide-out-content">
      <form>
        <div class="field">
          <label>First name: {{model.first}}</label>
          {{input 
            type="text" 
            placeholder="First name" 
            value=model.first
          }}
        </div>
        <div class="field">
          <label>Last name: {{model.last}}</label>
          {{input 
            type="text" 
            placeholder="Last name" 
            value=model.last
          }}
        </div>
      </form>
    </div>
  </div>
</div>